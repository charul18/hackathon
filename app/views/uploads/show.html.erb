 <%- model_class = Upload -%>
  <div class="page-header">
    <h1><%=t '.title', :default => model_class.model_name.human %></h1>
  </div>

  <dl class="dl-horizontal">
    <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
    <dd><%= @upload.name %></dd>
    <dt><strong><%= model_class.human_attribute_name(:file_file_name) %>:</strong></dt>
    <dd><%= @upload.file_file_name %></dd>
    <dt><strong><%= model_class.human_attribute_name(:file_content_type) %>:</strong></dt>
    <dd><%= @upload.file_content_type %></dd>
    <dt><strong><%= model_class.human_attribute_name(:file_file_size) %>:</strong></dt>
    <dd><%= @upload.file_file_size %></dd>
    <dt><strong><%= model_class.human_attribute_name(:file_updated_at) %>:</strong></dt>
    <dd><%= @upload.file_updated_at %></dd>
  </dl>

  <div class="form-actions">
    <%= link_to t('.back', :default => t("helpers.links.back")),
                uploads_path, :class => 'btn'  %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_upload_path(@upload), :class => 'btn' %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                upload_path(@upload),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
  </div>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>ID</th>
        <th>Article Title</th>
        <th>Author</th>
        <th>Content</th>
        <th>CreationDate</th>
      </tr>
    </thead>
    <tbody>
      <% @upload.articles.each do |article| %>
        <tr>
          <td><%= article.id %></td>
          <td><%= article.title %></td>
          <td><%= article.author %></td>
          <td><%= article.content %></td>
          <td><%= article.created_at %></td>s
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="form-actions">
    <%= link_to t('.back', :default => t("helpers.links.back")),
                uploads_path, :class => 'btn'  %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_upload_path(@upload), :class => 'btn' %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                upload_path(@upload),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
  </div>